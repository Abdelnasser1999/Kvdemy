@model FinanceAccountViewModel
@{
    ViewData["Title"] = "الحساب المالي";
	ViewData["FID"] = @Model.Id;
}

<!--begin::FinanceAccount summary-->
<div class="d-flex flex-column flex-xl-row gap-7 gap-lg-10">
	<!--begin::FinanceAccount details-->
	<div class="card card-flush py-4 flex-row-fluid">
		<!--begin::Card header-->
		<div class="card-header">
			<div class="card-title">
				<h1>الرصيد</h1>
			</div>
		</div>
		<!--end::Card header-->
		<!--begin::Card body-->
		<div class="card-body pt-0">
			<div class="table-responsive">
				<!--begin::Table-->
				<table class="table align-middle table-row-bordered mb-0 fs-6 gy-5 min-w-300px" style="border-top: none">
					<!--begin::Table body-->
					<tbody class="fw-semibold text-gray-600">
						<!--begin::Status-->
						<tr>
							<td class="text-muted">
								<div class="d-flex align-items-center">
									<!--begin::Svg Icon | path: icons/duotune/finance/fin008.svg-->
									<span class="svg-icon svg-icon-2 me-2" style="margin-left: 5px;">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path opacity="0.3" d="M3.20001 5.91897L16.9 3.01895C17.4 2.91895 18 3.219 18.1 3.819L19.2 9.01895L3.20001 5.91897Z" fill="currentColor"></path>
											<path opacity="0.3" d="M13 13.9189C13 12.2189 14.3 10.9189 16 10.9189H21C21.6 10.9189 22 11.3189 22 11.9189V15.9189C22 16.5189 21.6 16.9189 21 16.9189H16C14.3 16.9189 13 15.6189 13 13.9189ZM16 12.4189C15.2 12.4189 14.5 13.1189 14.5 13.9189C14.5 14.7189 15.2 15.4189 16 15.4189C16.8 15.4189 17.5 14.7189 17.5 13.9189C17.5 13.1189 16.8 12.4189 16 12.4189Z" fill="currentColor"></path>
											<path d="M13 13.9189C13 12.2189 14.3 10.9189 16 10.9189H21V7.91895C21 6.81895 20.1 5.91895 19 5.91895H3C2.4 5.91895 2 6.31895 2 6.91895V20.9189C2 21.5189 2.4 21.9189 3 21.9189H19C20.1 21.9189 21 21.0189 21 19.9189V16.9189H16C14.3 16.9189 13 15.6189 13 13.9189Z" fill="currentColor"></path>
										</svg>
									</span>
									<!--end::Svg Icon-->
									قيمة الرصيد المتوفر
								</div>
							</td>
							<td class="fw-bold text-end">
								<p style="color: #18A804;font-weight: bold;font-size: 25px;"> @Model.Balance </p>
							</td>
						</tr>
						<!--end::Status-->
						<!--begin::Date-->
						<tr>
							<td class="text-muted">
								<div class="d-flex align-items-center">
									<!--begin::Svg Icon | path: icons/duotune/ecommerce/ecm006.svg-->
									<span class="svg-icon svg-icon-2 me-2" style="margin-left: 5px;">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M20 8H16C15.4 8 15 8.4 15 9V16H10V17C10 17.6 10.4 18 11 18H16C16 16.9 16.9 16 18 16C19.1 16 20 16.9 20 18H21C21.6 18 22 17.6 22 17V13L20 8Z" fill="currentColor"></path>
											<path opacity="0.3" d="M20 18C20 19.1 19.1 20 18 20C16.9 20 16 19.1 16 18C16 16.9 16.9 16 18 16C19.1 16 20 16.9 20 18ZM15 4C15 3.4 14.6 3 14 3H3C2.4 3 2 3.4 2 4V13C2 13.6 2.4 14 3 14H15V4ZM6 16C4.9 16 4 16.9 4 18C4 19.1 4.9 20 6 20C7.1 20 8 19.1 8 18C8 16.9 7.1 16 6 16Z" fill="currentColor"></path>
										</svg>
									</span>
									<!--end::Svg Icon-->
									آخر تحديث
								</div>
							</td>
							<td class="fw-bold text-end">@Model.UpdatedAt.ToShortDateString()</td>
						</tr>
						<!--end::Date-->
					</tbody>
					<!--end::Table body-->
				</table>
				<!--end::Table-->
			</div>
		</div>
		<!--end::Card body-->
	</div>
	<!--end::FinanceAccount details-->
	<!--begin::Customer details-->
	<div class="card card-flush py-4 flex-row-fluid">
		<!--begin::Card header-->
		<div class="card-header">
			<div class="card-title">
				<h2>معلومات المستخدم</h2>
			</div>
		</div>
		<!--end::Card header-->
		<!--begin::Card body-->
		<div class="card-body pt-0">
			<div class="table-responsive">
				<!--begin::Table-->
				<table class="table align-middle table-row-bordered mb-0 fs-6 gy-5 min-w-300px">
					<!--begin::Table body-->
					<tbody class="fw-semibold text-gray-600">
						<!--begin::Customer name-->
						<tr>
							<td class="text-muted">
								<div class="d-flex align-items-center">
									<!--begin::Svg Icon | path: icons/duotune/communication/com006.svg-->
									<span class="svg-icon svg-icon-2 me-2" style="margin-left: 5px;">
										<svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path opacity="0.3" d="M16.5 9C16.5 13.125 13.125 16.5 9 16.5C4.875 16.5 1.5 13.125 1.5 9C1.5 4.875 4.875 1.5 9 1.5C13.125 1.5 16.5 4.875 16.5 9Z" fill="currentColor"></path>
											<path d="M9 16.5C10.95 16.5 12.75 15.75 14.025 14.55C13.425 12.675 11.4 11.25 9 11.25C6.6 11.25 4.57499 12.675 3.97499 14.55C5.24999 15.75 7.05 16.5 9 16.5Z" fill="currentColor"></path>
											<rect x="7" y="6" width="4" height="4" rx="2" fill="currentColor"></rect>
										</svg>
									</span>
									<!--end::Svg Icon-->
									المستخدم
								</div>
							</td>
							<td class="fw-bold text-end">
								<div style="align-content:center;display:flex">
									<!--begin:: Avatar -->
									<div class="symbol symbol-circle overflow-hidden me-3">
										<div class="symbol-label">
											<img src="http://krooti.ly/krooti-admin/Images/@Model.User.ProfileImage" alt="@Model.User.FirstName" class="w-100">
										</div>
									</div>
									<!--end::Avatar-->
									<!--begin::Name-->
									<p style="padding-top:15px;margin-right:5px;font-weight: bold;font-size: 18px;"> @Model.User.FirstName </p>
									<!--end::Name-->
								</div>
							</td>
						</tr>
						<!--end::Customer name-->
						<!--begin::Customer email-->
						<tr>
							<td class="text-muted">
								<div class="d-flex align-items-center">
									<!--begin::Svg Icon | path: icons/duotune/communication/com011.svg-->
									<span class="svg-icon svg-icon-2 me-2" style="margin-left: 5px;">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path opacity="0.3" d="M21 19H3C2.4 19 2 18.6 2 18V6C2 5.4 2.4 5 3 5H21C21.6 5 22 5.4 22 6V18C22 18.6 21.6 19 21 19Z" fill="currentColor"></path>
											<path d="M21 5H2.99999C2.69999 5 2.49999 5.10005 2.29999 5.30005L11.2 13.3C11.7 13.7 12.4 13.7 12.8 13.3L21.7 5.30005C21.5 5.10005 21.3 5 21 5Z" fill="currentColor"></path>
										</svg>
									</span>
									<!--end::Svg Icon-->
									الايميل
								</div>
							</td>
							<td class="fw-bold text-end">
								<p style="margin-right:5px;font-weight: bold;font-size: 15px;"> @Model.User.Email </p>
							</td>
						</tr>
						<!--end::Payment method-->
						<!--begin::Date-->
						<tr>
							<td class="text-muted">
								<div class="d-flex align-items-center">
									<!--begin::Svg Icon | path: icons/duotune/electronics/elc003.svg-->
									<span class="svg-icon svg-icon-2 me-2" style="margin-left: 5px;">
										<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M5 20H19V21C19 21.6 18.6 22 18 22H6C5.4 22 5 21.6 5 21V20ZM19 3C19 2.4 18.6 2 18 2H6C5.4 2 5 2.4 5 3V4H19V3Z" fill="currentColor"></path>
											<path opacity="0.3" d="M19 4H5V20H19V4Z" fill="currentColor"></path>
										</svg>
									</span>
									<!--end::Svg Icon-->
									رقم الهاتف
								</div>
							</td>
							<td class="fw-bold text-end">
								<p style="margin-right:5px;font-weight: bold;font-size: 15px;"> @Model.User.PhoneNumber </p>
							</td>
						</tr>
						<!--end::Date-->
					</tbody>
					<!--end::Table body-->
				</table>
				<!--end::Table-->
			</div>
		</div>
		<!--end::Card body-->
	</div>
	<!--end::Customer details-->
</div>
<!--end::Order summary-->
<!--begin::Card-->
<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h2 class="card-label">
               الحركات المالية
            </h2>
        </div>
    </div>
    <div class="card-body">
        <!--begin: Search Form-->
        <!--begin::Search Form-->
        <div class="mb-7">
            <div class="row align-items-center">
                <div class="col-lg-4 col-xl-4">
                    <div class="row align-items-center">
                        <div class="col-md-12 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" class="form-control" placeholder="أبحث.." id="kt_datatable_search_query" />
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!--begin: Datatable-->
		<div id="userIdInput" data-userid="@ViewData["FID"]">
			<div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
		</div>

        <!--end: Datatable-->
    </div>
</div>
<!--end::Card-->
@section Scripts {
	<script src="~/datatable/Transactions.js"></script>
}


